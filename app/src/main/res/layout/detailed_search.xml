<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@+id/salutation" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="20sp" android:text="Detailed Search:"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView android:id="@+id/Break" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="20sp" android:text=""/>
        <TextView android:id="@+id/Date" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="20sp" android:text="Date:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/date1"
            android:text="DD/MM/YYYY"
            />
        <TextView android:id="@+id/Break2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="20sp" android:text=""/>
        <TextView android:id="@+id/Location" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="20sp" android:text="Additional Information:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            android:text="SWINDON"
            />



    </LinearLayout>





</LinearLayout>